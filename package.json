{
  "name": "inventario-server",
  "version": "3.2.0",
  "description": "Sistema de inventario con escáneres móviles",
  "main": "main.js",
  "author": "NandoPls",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NandoPls/InventarioServer"
  },
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "icons": "node scripts/generate-icons.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.nandopls.inventario",
    "productName": "Inventario Server",
    "artifactName": "InventarioServer-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!.git/**",
      "!.github/**",
      "!*.md"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Inventario Server"
    },
    "publish": {
      "provider": "github",
      "owner": "NandoPls",
      "repo": "InventarioServer",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.4",
    "sql.js": "^1.13.0",
    "uuid": "^9.0.0",
    "ws": "^8.16.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  }
}
